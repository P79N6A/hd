/user/comments:
  get:
    summary: 获取用户评论列表
    description: |
      获取用户评论列表
    parameters:
      - $ref: '#/parameters/appid'
      - $ref: '#/parameters/signature'
      - $ref: '#/parameters/timestamp'
      - $ref: '#/parameters/client_id'
      - $ref: '#/parameters/token'
      - $ref: '#/parameters/page'
      - $ref: '#/parameters/per_page'
    tags:
      - User
      - Comment
    responses:
      '200':
        description: 带评论对象的返回结果
        schema:
          type: object
          properties:
            code:
              $ref: '#/definitions/C'
            msg:
              $ref: '#/definitions/M'
            data:
              type: array
              items:
                $ref: '#/definitions/CommentOne'
      '403':
        description: 无法通过token获取评论数据
        schema:
          $ref: '#/definitions/Forbidden'
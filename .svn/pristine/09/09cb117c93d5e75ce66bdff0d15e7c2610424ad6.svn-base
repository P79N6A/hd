<script type="text/javascript">


        $(function(){
            $('.setrandcredit').hide(); 
            $('input[name=single_credit_type]').on('ifChanged', function(event){ //ifCreated 事件应该在插件初始化之前绑定 
                if ($("input[name=single_credit_type]:checked").attr("value") == "single") {
                    $('.setsinglecredit').show();
                    $('.setrandcredit').hide();  
                }
                if($("input[name=single_credit_type]:checked").attr("value") == 'rand') {
                    $('.setrandcredit').show();
                    $('.setsinglecredit').hide();
                }
            });            

            if ($("#type").val() == 120) {
                $('.range_step_credit').show();
            }
            else {                
                $('.range_step_credit').hide();
            }

            $('#type').change(function() {
                if ($("#type").val() == 120) {
                    $('.range_step_credit').show();
                }
                else {
                    $('.range_step_credit').hide();
                }
              });


        });

    // form stations
    $('#form-applist').validate({
        errorElement: 'span', //default input error message container
        errorClass: 'help-block', // default input error message class
        focusInvalid: true, // do not focus the last invalid input
        rules: {
            name: {
                required: true
            },
            bundleid: {
                required: true
            },
            sku: {
                required: true
            },
            copyright: {
                required: true
            }
        },

        messages: {
            name: {
                required: '应用名不能为空'
            },
            bundleid: {
                required: 'APP ID不能为空'
            },
            sku: {
                required: 'SKU不能为空'
            },
            copyright: {
                required: '版权不能为空'
            }
        },

        invalidHandler: function(event, validator) {
            //$('.alert-danger', $('.login-form')).show();
        },

        highlight: function(element) { // hightlight error inputs
            $(element).closest('.form-group').addClass('has-error'); // set error class to the control group
        },

        success: function(label) {
            label.closest('.form-group').removeClass('has-error');
            label.remove();
        },

        errorPlacement: function(error, element) {
            error.insertAfter(element.closest('.validate-box'));
        },

        submitHandler: function(form) {
            form.submit(); // form validation success, call ajax form submit
        }

    });
</script>

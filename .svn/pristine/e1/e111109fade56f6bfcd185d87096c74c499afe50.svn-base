/credit/rules:
  get:
    summary: 获取积分规则
    tags:
      - Credit
      - Letv
    description: 获取积分规则
    parameters:
      - name: user_id
        in: query
        description: 用户ID
        required: true
        type: integer
      - $ref: '#/parameters/token'
      - $ref: '#/parameters/appid'
      - $ref: '#/parameters/signature'
      - $ref: '#/parameters/timestamp'
      - $ref: '#/parameters/client_id'
    responses:
      '200':
        description: 成功结果
        schema:
          type: object
          properties:
            alertMessage:
              type: string
              default: 数据获取成功
            state:
              type: integer
              default: 0
            message:
              type: string
              default: success
            content:
              type: object
              properties:
                new:
                  type: array
                  items:
                    $ref: '#/definitions/RuleOne'
                daily:
                  type: array
                  items:
                    $ref: '#/definitions/RuleOne'
      '404':
        description: 出错返回
        schema:
          $ref: '#/definitions/NotFound'
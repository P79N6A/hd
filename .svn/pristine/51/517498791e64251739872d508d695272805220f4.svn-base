/app:
  get:
    summary: 获取app更新信息
    tags:
      - App
    description: 获取app更新信息
    parameters:
      - name: sku
        in: query
        description: app sku
        required: true
        type: string
      - name: type
        in: query
        description: APP类型，1：android 2：ios
        required: true
        type: integer
      - name: v
        in: query
        description: 当前APP版本
        required: true
        type: string
      - $ref: '#/parameters/appid'
      - $ref: '#/parameters/signature'
      - $ref: '#/parameters/timestamp'
      - $ref: '#/parameters/client_id'
    responses:
      '200':
        description: 成功结果
        schema:
          type: object
          properties:
            code:
              $ref: '#/definitions/C'
            msg:
              $ref: '#/definitions/M'
            data:
              type: object
              properties:
                status:
                  type: integer
                  description: 是否有更新,0：无更新，1：有更新
                  default: 0
                version:
                  type: string
                  description: 最新版本
                  default: 1.3.1
                name:
                  type: string
                  description: APP名称
                  default: 中国蓝新闻
                newfeature:
                  type: string
                  description: 更新提示语
                  default: 不更新不能用，你更新不更新
                nextcheck:
                  type: integer
                  description: 下次会在多少天后更新
                  default: 3
                url:
                  type: string
                  description: 下载地址或者跳转链接
                  default: http://xxxx
      '404':
        description: 出错返回
        schema:
          $ref: '#/definitions/NotFound'
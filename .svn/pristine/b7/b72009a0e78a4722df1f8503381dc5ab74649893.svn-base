<script type="text/javascript" src="/assets/global/plugins/dropify-master/dist/js/dropify.min.js"></script>
<link href="/assets/global/plugins/dropify-master/dist/css/dropify.min.css" rel="stylesheet" type="text/css"/>
<div class="form-group box-border-right  box-border-top indexes" style="margin-top: 2px">
    <label class="control-label col-md-12" style="text-align: left;background-color: rgba(230, 230, 230, 0.57);padding:5px;">
        <label class="col-md-3" style="font-size: 15px;font-weight: 800;padding-left: 0px;margin-bottom: 0px">封面图</label>

        <label class="raw_img col-md-3 font-blue" style="margin-bottom: 0px;text-align:center">
        	logo
        </label>

        <label class="S_N col-md-2" style="margin-bottom: 0px">
                              封面
        </label>

    </label>
    <div class="col-md-12 box-border-top index_map1">
    	<div style="width: 250px;margin: 0px auto;">
	        <input type="file" id="input_img1" class="dropify"
	               data-default-file="<?= isset($model->logo)?(stripos($model->logo,'image.xianghunet.com')?$model->logo:cdn_url('image',$model->logo)):"/assets/admin/pages/img/thumb.png" ?>"
	               data-height="156" data-max-width="800" data-max-height="800"
	               data-max-file-size="7M" data-allowed-file-extensions="png jpg jpeg"
	               data-max-file-size-preview="7M" data-disable-remove="true"/>
	        <input type="hidden" name="logo" id="input_thumb1" value="<?= isset($model->logo) ? $model->logo : ""?>" />
        </div>
    </div>

    <div class="col-md-12 box-border-top index_map2" style="display: none;">
        <div style="width: 350px;margin: 0px auto;">
            <input type="file" id="input_img2" class="dropify"
                   data-default-file="<?= isset($model->cover)?(stripos($model->cover,'image.xianghunet.com')?$model->cover:cdn_url('image',$model->cover)):"/assets/admin/pages/img/thumb.png" ?>"
                   data-height="156" data-max-width="800" data-max-height="800"
                   data-max-file-size="7M" data-allowed-file-extensions="png jpg jpeg"
                   data-max-file-size-preview="7M" data-disable-remove="true"/>
            <input type="hidden" name="cover" id="input_thumb2" value="<?= isset($model->cover) ? $model->cover : ""?>" />
        </div>
    </div>
</div>
<script>
    //索引图比例切换
    $(".raw_img").click(function(){
        $(this).addClass("font-blue");
        $(".S_N").removeClass("font-blue");
        $(".index_map2").hide();
        $(".index_map1").show();
    });

    $(".S_N").click(function(){
        $(this).addClass("font-blue");
        $(".raw_img").removeClass("font-blue");
        $(".index_map2").show();
        $(".index_map1").hide();
    });
    
    $(document).ready(function () {
        $('.dropify').dropify({
            messages: {
                'default': '请上传尺寸不超过800x800的图片',
                'replace': '点击或拖拽文件到这里来替换文件',
                'remove': '移除文件',
                'error': '上传文件不符合条件！'
            },
            error: {
                'fileSize': '文件大小不得超过 ({{ value }} ).',
                'minWidth': '图片最大宽度必须大于 ({{ value }}px).',
                'maxWidth': '图片最大宽度必须小于 ({{ value }}px ).',
                'minHeight': '图片最大高度必须大于 ({{ value }}px).',
                'maxHeight': '图片最大高度不得超过 ({{ value }}px).',
                'imageFormat': '图片格式仅支持 ({{ value }}).'
            }
        });
    });

    var thumb_url = function(){
        for (var index = 1; index<=2; ++index) {
            var thumb_data =  $(".index_map"+index).find("img").attr("src");
            if( thumb_data == '/assets/admin/pages/img/thumb.png' ){
                thumb_data = "";
            }
            $("#input_thumb"+index).val(thumb_data);
        }

    }

</script>

/comments:
  get:
    summary: 媒资的评论列表
    tags:
      - Comment
    description: 基于媒资的评论列表
    parameters:
      - name: id
        in: query
        description: 媒资ID
        required: true
        type: integer
      - name: type
        in: query
        description: 排序类型 top:热门 lastest:最新
        required: false
        type: string
        default: top
        enum:
        - top
        - lastest
      - $ref: '#/parameters/appid'
      - $ref: '#/parameters/signature'
      - $ref: '#/parameters/timestamp'
      - $ref: '#/parameters/client_id'
    responses:
      '200':
        description: 成功结果
        schema:
          type: object
          properties:
            code:
              $ref: '#/definitions/C'
            msg:
              $ref: '#/definitions/M'
            data:
              type: array
              items:
                $ref: '#/definitions/CommentOne' 
      '404':
        description: 出错返回
        schema:
          $ref: '#/definitions/NotFound'
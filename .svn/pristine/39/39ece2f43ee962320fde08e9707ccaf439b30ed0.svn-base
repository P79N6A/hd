CREATE TABLE IF NOT EXISTS `baoliao_attachment` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `origin_name` varchar(255) NOT NULL COMMENT '原始附件名',
  `name` varchar(200) NOT NULL COMMENT '上传后的保存名',
  `ext` varchar(6) NOT NULL COMMENT '附件后缀',
  `path` varchar(200) NOT NULL COMMENT '存储相对路径',
  `type` varchar(10) NOT NULL COMMENT '附件类型 1-视频 2-图片 0-未知',
  `created` int(11) NOT NULL COMMENT '附件上传时间',
  `baoliao_id` int(11) NOT NULL COMMENT '爆料ID',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB  DEFAULT CHARSET=utf8 AUTO_INCREMENT=1 ;

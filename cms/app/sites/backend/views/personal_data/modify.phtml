        if (value.match(/[0-9]/ig)){ lv++; }
        if (value.match(/(.[^a-z0-9])/ig)){ lv++; }
        if (length < 6 && lv > 0){ lv--; }
        if(lv < 1) {
            return false;
        }
        else {
            return true;
        }
    }


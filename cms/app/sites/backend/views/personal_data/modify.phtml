    jQuery.validator.addMethod("issecurity", function(value) {
        var length = value.length;
        var lv = 0;
        if (value.match(/[a-z]/ig)){ lv++; }
        if (value.match(/[0-9]/ig)){ lv++; }
        if (value.match(/(.[^a-z0-9])/ig)){ lv++; }
        if (length < 6 && lv > 0){ lv--; }
        if(lv < 2) {
            return false;
        }
        else {
            return true;
        }
    } ,  "密码过于简单！");

    function issecurity2(value) {
        var length = value.length;

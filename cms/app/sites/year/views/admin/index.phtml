/*
 * 对手机号进行操作
 */
function phoneNumberTransfer($str) {
    $startstr = "";
    $laststr = "";
    $midstr = "";
    for($j=0; $j<3; $j++) {
        $startstr .= $str[$j];
    }
    for ($j=3; $j<7; $j++) {
        $midstr .= $str[$j];
    }
    for ($j=7; $j<11; $j++) {
        $laststr .= $str[$j];
    }
    $str = ($startstr . "-" . $midstr . "-" . $laststr);
    return $str;
}

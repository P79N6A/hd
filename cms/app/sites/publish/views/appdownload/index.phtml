<script type="text/javascript">
            //浏览器判断
            var ua = {
                android:false,
                android2:false,
                iphone:false,
                ipad:false,
                pc:false,
                wechat:false,
                chinabluenews:false
            };
            (function(){
                var ua_str = window.navigator.userAgent.toLowerCase();
                if(/iphone/.test(ua_str)||/itouch/.test(ua_str)||/ipod/.test(ua_str)){
                    ua.iphone = true;
                }else if(/ipad/.test(ua_str)){
                    ua.ipad = true;
                }else if(/android/.test(ua_str)){
                    ua.android = true;
                    if(/android 2./.test(ua_str)){
                        ua.android2 = true;
                    }
                }else{
                    ua.pc = true;
                }
                if(/chinabluenews/.test(ua_str)||0){
                    ua.chinabluenews = true;
                }
                if(/micromessenger/.test(ua_str)){
                    ua.wechat = true;
                    ua.chinabluenews = false;
                }
            })();

    $(window).ready(function() {            
            var isAndroid = navigator.userAgent.match(/Android/ig);
            var isIos = navigator.userAgent.match(/iphone|ipod/ig);
            var isIpad = navigator.userAgent.match(/ipad/ig);
            var isWeixin = (/MicroMessenger/ig).test(navigator.userAgent);
            var android_url='<?= (stripos($data['android']['url'], "http")===false)?str_ireplace("https", "http", cdn_url('image', $data['android']['url'])):$data['android']['url'] ?>';
            var ios_url=isWeixin?'<?= $data['ios']['url'] ?>':'<?= $data['ios']['url'] ?>';
            if(isWeixin) {
				$(".add_info").css("display","block");
			}
            if ((isIos || isIpad) && !isAndroid) {
                if(''!=ios_url&&'正在审核'!=ios_url) {
                    setTimeout(function() {
                        location.href = ios_url;
                    }, 50);
                }
            }
            else if (isAndroid && android_url) {
                if (confirm("检测到您正在使用Android 手机，是否直接下载程序安装包？")) {
                    location.href = android_url;
                    return;
                }
            }
        });     
</script>
